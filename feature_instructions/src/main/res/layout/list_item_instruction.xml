<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_instruction_key"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="D.1"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/tv_instruction_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_instruction_text" />
    <TextView
        android:id="@+id/tv_instruction_text"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Filler filler text is, filling the fillable space. And some more to see how wrapping works in design."
        app:layout_constraintEnd_toStartOf="@id/switch_instruction"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tv_instruction_key"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_instruction"
        android:layout_gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/tv_instruction_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_instruction_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
