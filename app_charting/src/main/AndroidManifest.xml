<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bloomcyclecare.cmcc">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".apps.charting.ChartingApp"
        android:allowBackup="false"
        android:icon="${icon}"
        android:label="@string/app_name"
        android:roundIcon="${roundIcon}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.drive.DriveAuthActivity" />

        <service android:name=".notifications.ChartingService" />
        <receiver
            android:name=".notifications.ChartingReceiver"
            android:exported="true" />
        <receiver
            android:name=".notifications.ReminderReceiver"
            android:exported="true" />

        <service android:name=".notifications.SyncService" />
        <receiver
            android:name=".notifications.SyncReceiver"
            android:exported="true" />

        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:mimeType="application/json"
                    android:scheme="content" />
                <data
                    android:mimeType="application/x-sqlite3"
                    android:scheme="content" />
                <data
                    android:mimeType="application/octet-stream"
                    android:scheme="content" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.entry.EntryDetailActivity"
            android:label="@string/title_activity_entry_detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".features.instructions.ui.InstructionsListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".ui.goals.create.CreateGoalActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>