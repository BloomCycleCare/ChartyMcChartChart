<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bloomcyclecare.cmcc">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.bloomcyclecare.cmcc.application.MyApplication"
        android:allowBackup="false"
        android:icon="${icon}"
        android:label="@string/app_name"
        android:roundIcon="${roundIcon}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bloomcyclecare.cmcc.ui.drive.DriveActivity"></activity>

        <service android:name="com.bloomcyclecare.cmcc.notifications.ChartingService" />
        <receiver
            android:name="com.bloomcyclecare.cmcc.notifications.ChartingReceiver"
            android:exported="true" />

        <service android:name="com.bloomcyclecare.cmcc.notifications.SyncService" />
        <receiver
            android:name="com.bloomcyclecare.cmcc.notifications.SyncReceiver"
            android:exported="true" />


        <activity
            android:name="com.bloomcyclecare.cmcc.ui.init.UserInitActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.chart"
                    android:scheme="content" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.chart"
                    android:scheme="file" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bloomcyclecare.cmcc.ui.entry.list.ChartEntryListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.bloomcyclecare.cmcc.ui.print.PrintChartActivity"
            android:label="@string/title_activity_cycle_list"
            android:launchMode="singleTop"
            android:parentActivityName="com.bloomcyclecare.cmcc.ui.entry.list.ChartEntryListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bloomcyclecare.cmcc.ui.entry.list.ChartEntryListActivity" />
        </activity>
        <activity
            android:name="com.bloomcyclecare.cmcc.ui.entry.detail.EntryDetailActivity"
            android:label="@string/title_activity_entry_detail"
            android:parentActivityName="com.bloomcyclecare.cmcc.ui.entry.list.ChartEntryListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bloomcyclecare.cmcc.ui.entry.list.ChartEntryListActivity" />
        </activity>
        <activity android:name="com.bloomcyclecare.cmcc.ui.settings.SettingsActivity" />
        <activity
            android:name="com.bloomcyclecare.cmcc.ui.profile.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.bloomcyclecare.cmcc.ui.instructions.InstructionsListActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.bloomcyclecare.cmcc.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.bloomcyclecare.cmcc.ui.goals.create.CreateGoalActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>