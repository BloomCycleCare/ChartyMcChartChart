<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.roamingroths.cmcc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ChartEntryListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CycleListActivity"
            android:label="@string/title_activity_cycle_list"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".SettingsActivity"/>
        <activity
            android:name=".ChartEntryModifyActivity"
            android:label="@string/title_activity_observation_modify"
            android:parentActivityName=".ChartEntryListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChartEntryListActivity"/>
        </activity>
    </application>

</manifest>